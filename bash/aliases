# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias bk="cd -"

# Improved listing
alias ls="ls -F"
alias l="ls"
alias la="ls -AF"
alias a="la"
alias lo="ls -AF1"
alias ll="ls -AFhl"

# Build InventoryBase from develop branch and deploy that shit
alias dbd="./devbuild && ./deploy"

# Git aliases
function git_current_branch() {
	git symbolic-ref HEAD 2> /dev/null | sed -e 's/refs\/heads\///'
}
alias gs="git status"
alias g="git status -sb"
alias gb="git branch"
alias gco="git checkout"
alias ga="git add"
alias gaa="git add -A"
alias gap="git add -p"
alias gc="git commit -v"
alias gm="git merge --no-ff"
alias grb='git rebase -p'
# alias gps="git push"
alias gpsall='git push'
alias gps='git push origin HEAD:$(git_current_branch)'
# alias gpl="git pull"
alias gpl="git pull --rebase"
alias gup='git fetch origin && grb origin/$(git_current_branch)' # gup instead of gpl
alias gd='git diff | mvim -R -f -'
alias gdc='git diff --cached | mvim -R -f -'
alias gk="gitk --all"
alias gl="git log --graph --pretty=format':%C(red)%h%Cgreen%d%Creset %s %C(blue) %an, %ar%Creset'"
alias glo="git log --oneline"
function gblame() { git blame $1 | mvim -R -f -; }

alias groot="`echo git root` && cd `git root`"

# mkdir and cd into it
function tk() { mkdir $1; cd $1; }

# Editor aliases 
alias v="mvim"
alias v.="mvim ."
alias s="subl"
alias s.="subl ."

function unixtime() {
	date +%s && date +%s | pbcopy
}

# Important directory shortcuts
alias ht="cd /Library/WebServer/Sites/"
alias hm="cd ~"
alias dot="cd ~/.bin/dotfiles/"

# bashrc & vimrc
alias reload="source ~/.bashrc"
alias ea="mvim -f ~/.bin/dotfiles/bash/aliases && reload"
alias hosts="sudo subl /etc/hosts"
alias vimrc="mvim ~/.bin/dotfiles/vimrc"

# nanoc aliases
alias na="nanoc aco"
alias nc="nanoc co"

# Jumplist aliases
alias jl="jump --list"
alias ja="jump --add"
alias jd="jump --del"
function j() {
	if [ $# -eq 0 ]; then
		jump --list
	else
		jump $@
	fi
}

# Apache
alias apache="sudo /usr/sbin/apachectl"
alias a2r="sudo /usr/sbin/apachectl restart"

# MySQL
function mysql() {
	if [ $# -eq 0 ]; then
		/usr/local/Cellar/mysql/5.6.10/bin/mysql -u root
	else
		/usr/local/Cellar/mysql/5.6.10/bin/mysql.server $@
	fi
}

# Restart wireless
alias resetip="sudo ipconfig set en1 BOOTP; sudo ipconfig set en1 DHCP"

# Flush DNS
alias flushdns="dscacheutil -flushcache"

# Toggle hidden files in Finder
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"

# Hide/show desktop icons
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false; killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true; killall Finder"

# Hide/show ~/Library in Finder
alias showlibrary="chflags nohidden ~/Library/"
alias hidelibrary="chflags hidden ~/Library/"

# Fix VirtualBox Error
alias fixvirtualbox="sudo /Library/StartupItems/VirtualBox/VirtualBox restart"

# Tail Today's FuelPHP App Log
alias fuellog="tail -f fuel/app/logs/"`eval date +%Y`"/"`eval date +%m`"/"`eval date +%d`".php"

function unblockuson() {
	sudo networksetup -setdnsservers "Wi-Fi" 208.122.23.22 208.122.23.23
	sudo networksetup -setairportpower "en1" "off"
	sudo networksetup -setairportpower "en1" "on"
	echo "Unblock-Us: ENABLED"
}

function unblockusoff() {
	sudo networksetup -setdnsservers "Wi-Fi" "empty"
	sudo networksetup -setairportpower "en1" "off"
	sudo networksetup -setairportpower "en1" "on"
	echo "Unblock-Us: DISABLED"
}

# Simple HTTP API requests, pipe to json for awesomeness
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
    alias "$method"="lwp-request -m '$method'"
done

# Syntax-highlight JSON strings or files
function json() {
	if [ -p /dev/stdin ]; then
		# piping, e.g. `echo '{"foo":42}' | json`
		python -mjson.tool | pygmentize -l javascript
	else
		# e.g. `json '{"foo":42}'`
		python -mjson.tool <<< "$*" | pygmentize -l javascript
	fi
}

# take this repo and copy it to somewhere else minus the .git stuff.
function gitexport(){
	mkdir -p "$1"
	git archive master | tar -x -C "$1"
}
